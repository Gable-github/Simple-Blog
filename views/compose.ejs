<%- include("partials/header") %>
    <h1>Compose</h1>
        <form action="/compose" method="post" class="form-group">
            <div class="form-group">
                <label class="col-12">Title</label>
                <input type="text" name="postTitle" placeholder="My thoughts for today..." class="form-control">
            </div>
            <div class="form-group">
                <label>Post</label>
                <textarea name="postContent" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Publish</button>
        </form>
<%- include("partials/footer") %>